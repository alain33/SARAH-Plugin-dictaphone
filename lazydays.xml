  <rule id="rulelazyday" scope="public">
    <tag>out.action=new Object()</tag>
 
	<one-of>
		<item>Annule Sarah<tag>out.action.command="stop"</tag></item>
		<item><ruleref uri="#DefineDay"/>
			<tag>
				if (timer.weekday != undefined)
					out.action.start = timer.weekday + "-";
				else 
					out.action.start = "today-";
			
				if (timer.day != undefined)
					out.action.start = out.action.start + timer.day + "-";
				else
					out.action.start = out.action.start + "current-";
					
				if (timer.month != undefined)
					out.action.start = out.action.start + timer.month + "-";
				else
					out.action.start = out.action.start + "current-";
				
				if (timer.year != undefined)
					out.action.start = out.action.start + timer.year + "-";
				else
					out.action.start = out.action.start + "current-";
				
				if (timer.hour != undefined) {
					out.action.start = out.action.start + timer.hour  + ":";
					if (timer.mn != undefined)
						out.action.start = out.action.start + timer.mn ;
					else 
						out.action.start = out.action.start + "00";
				} else 
						out.action.start = out.action.start + "repeat";
					
				out.action.command="setTime";
			</tag>
		</item> 
		
	</one-of>
	
    <tag>out.action._attributes.uri="http://127.0.0.1:8080/sarah/dictaphone"</tag>
  </rule>
